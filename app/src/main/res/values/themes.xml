<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.CartShop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/PrimaryColor</item>
        <item name="colorPrimaryVariant">@color/PrimaryColorDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_light</item>
        <item name="colorSecondaryVariant">@color/textGray</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    
    <style name="textLarge" parent="">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="textLargeBold" parent="">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="textMedium" parent="">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="textNormal" parent="">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="textLight" parent="">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_light</item>
    </style>
</resources>